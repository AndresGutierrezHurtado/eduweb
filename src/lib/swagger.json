{
    "openapi": "3.0.0",
    "info": {
        "title": "EduWeb API",
        "description": "Documentación de la API para la plataforma educativa EduWeb",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "Usuarios",
            "description": "Operaciones relacionadas con usuarios"
        },
        {
            "name": "Cursos", 
            "description": "Operaciones relacionadas con cursos"
        },
        {
            "name": "Certificados",
            "description": "Operaciones relacionadas con certificados"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Obtener todos los usuarios",
                "description": "Recuperar una lista paginada de usuarios",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of items per page",
                        "schema": {
                            "type": "integer",
                            "default": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/User"
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Usuarios"],
                "summary": "Crear un nuevo usuario",
                "description": "Registrar un nuevo usuario en el sistema",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user": {
                                        "$ref": "#/components/schemas/UserInput"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "Invalid input or duplicate email/phone"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Obtener usuario por ID",
                "description": "Recuperar un usuario específico por su ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "put": {
                "tags": ["Usuarios"],
                "summary": "Actualizar usuario",
                "description": "Actualizar la información de un usuario existente",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user": {
                                        "$ref": "#/components/schemas/UserInput"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated successfully"
                    }
                }
            },
            "delete": {
                "tags": ["Usuarios"],
                "summary": "Eliminar usuario",
                "description": "Eliminar un usuario del sistema",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully"
                    }
                }
            }
        },
        "/users/{id}/courses": {
            "get": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Obtener cursos del usuario",
                "description": "Recuperar todos los cursos asociados a un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/users/{id}/courses/{courseId}": {
            "get": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Obtener curso específico del usuario",
                "description": "Recuperar detalles de un curso específico para un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/users/{id}/courses/{courseId}/lessons/{lessonId}": {
            "get": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Marcar lección como completada",
                "description": "Marcar una lección como completada para el curso de un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "lessonId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lesson marked as completed"
                    }
                }
            }
        },
        "/users/{id}/courses/{courseId}/exams/start": {
            "get": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Iniciar examen del curso",
                "description": "Iniciar o reanudar un examen para el curso de un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Exam started successfully"
                    }
                }
            }
        },
        "/users/{id}/courses/{courseId}/exams/{examId}": {
            "get": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Obtener detalles del examen",
                "description": "Recuperar detalles de un examen específico",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "examId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "post": {
                "tags": ["Usuarios", "Cursos"],
                "summary": "Enviar respuestas del examen",
                "description": "Enviar respuestas para un examen",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "examId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "answers": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Answers submitted successfully"
                    }
                }
            }
        },
        "/users/{id}/courses/{courseId}/certificate": {
            "get": {
                "tags": ["Usuarios", "Cursos", "Certificados"],
                "summary": "Obtener certificado del curso",
                "description": "Generar y recuperar un certificado de finalización del curso",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "courseId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "PDF certificate",
                        "content": {
                            "application/pdf": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/courses": {
            "get": {
                "tags": ["Cursos"],
                "summary": "Obtener todos los cursos",
                "description": "Recuperar una lista paginada de cursos con opciones de filtrado",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Filter by category ID",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Sort order (e.g., 'createdAt:DESC')",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search term",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of items per page",
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/courses/{id}": {
            "get": {
                "tags": ["Cursos"],
                "summary": "Obtener curso por ID",
                "description": "Recuperar detalles de un curso específico",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/courses/{id}/exam": {
            "get": {
                "tags": ["Cursos"],
                "summary": "Obtener examen del curso",
                "description": "Recuperar el examen de un curso específico",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/certificates/{id}": {
            "get": {
                "tags": ["Certificados"],
                "summary": "Obtener certificado por ID",
                "description": "Recuperar un certificado específico",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "user_name": {
                        "type": "string"
                    },
                    "user_lastname": {
                        "type": "string"
                    },
                    "user_email": {
                        "type": "string",
                        "format": "email"
                    },
                    "user_phone": {
                        "type": "string"
                    },
                    "user_image": {
                        "type": "string"
                    },
                    "role": {
                        "$ref": "#/components/schemas/Role"
                    }
                }
            },
            "UserInput": {
                "type": "object",
                "properties": {
                    "user_name": {
                        "type": "string"
                    },
                    "user_lastname": {
                        "type": "string"
                    },
                    "user_email": {
                        "type": "string",
                        "format": "email"
                    },
                    "user_password": {
                        "type": "string"
                    },
                    "user_phone": {
                        "type": "string"
                    },
                    "role_id": {
                        "type": "integer"
                    }
                }
            },
            "Role": {
                "type": "object",
                "properties": {
                    "role_id": {
                        "type": "integer"
                    },
                    "role_name": {
                        "type": "string"
                    }
                }
            }
        }
    }
}